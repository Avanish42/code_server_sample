#manage-brands_by_countries

  .c-list
    display inline-block
    margin 20px 0
    width calc(50% - 20px)
    min-width 320px
    border 2px dashed #eee

    &:nth-of-type(odd)
      margin-right 40px

    &-header
      padding 15px 15px 5px
      font-size 18px
      font-weight 700
      background-color #eee

      .interface
        margin-left 15px
        button
          margin 0 8px
          padding 0
          width 20px

    &-content
      padding 15px

      select
        width 100%
        min-height 130px
